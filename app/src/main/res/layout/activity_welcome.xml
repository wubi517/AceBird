<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_bg"
    android:orientation="vertical"
    android:id="@+id/main_lay"
    tools:context=".activities.WelcomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1.5">
        <LinearLayout
            android:layout_marginRight="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:textColor="@color/welcome_color"
                android:text="Mon, 09 Jul 2018"
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_time"
                android:layout_marginLeft="20sp"
                android:text="20:30"
                android:textColor="@color/welcome_color"
                android:textSize="23sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:visibility="invisible"
            android:id="@+id/icon"
            android:scaleType="fitXY"
            android:layout_marginTop="5sp"
            android:layout_width="100sp"
            android:layout_height="60sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2">
        <LinearLayout
            android:visibility="invisible"
            android:padding="10sp"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_ad1"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="bottom"
            android:background="@drawable/icon_back"
            android:paddingTop="15sp"
            android:paddingBottom="8sp"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ListView
                android:divider="#00000000"
                android:scrollbars="none"
                android:id="@+id/category_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>
        <LinearLayout
            android:visibility="invisible"
            android:padding="10sp"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_ad2"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_left"
                android:paddingTop="20sp"
                android:paddingRight="40sp"
                android:paddingLeft="40sp"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/video_club"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/txt_left"
                android:gravity="center"
                android:text="VIDEO CLUB"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.3"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_center"
            android:orientation="vertical"
            android:background="@drawable/icon_back"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1">
                <LinearLayout
                    android:paddingTop="20sp"
                    android:paddingBottom="10sp"
                    android:paddingLeft="8sp"
                    android:paddingRight="12sp"
                    android:layout_width="40sp"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_left"
                        android:background="@drawable/leftrow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/image_center"
                    android:paddingTop="20sp"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/tv_icon"/>
                <LinearLayout
                    android:paddingTop="20sp"
                    android:paddingBottom="10sp"
                    android:paddingLeft="12sp"
                    android:paddingRight="8sp"
                    android:layout_width="40sp"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_right"
                        android:background="@drawable/rightrow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/txt_center"
                android:gravity="center"
                android:text="TV"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.3"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_right"
                android:paddingTop="18sp"
                android:paddingRight="40sp"
                android:paddingLeft="40sp"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/tv_serires"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/txt_right"
                android:gravity="center"
                android:text="TV SERIES"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.3"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.7">
    </LinearLayout>
</LinearLayout>