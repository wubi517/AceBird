<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@drawable/background1"
    tools:context=".activities.PreviewChannelAcitivoty">
    <RelativeLayout
        android:id="@+id/main_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ly_back"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingRight="13dp"
                android:paddingLeft="17sp"
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_weight="1.1"
                android:layout_height="match_parent">
                <ImageView
                    android:visibility="visible"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@color/trans_parent"
                    android:paddingTop="100dp"
                    android:paddingBottom="70sp"
                    android:id="@+id/btn_back"
                    android:src="@drawable/backbg"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1">
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.8">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="5sp"
                        android:layout_marginLeft="30sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TV /"
                            android:textColor="@color/welcome_color"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txt_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TV PORTUGAL"
                            android:textColor="@color/welcome_color"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:text="19:30"
                        android:textColor="@color/welcome_color"
                        android:textSize="20sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="6"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginLeft="10sp"
                        android:id="@+id/ly_left"
                        android:orientation="vertical"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20sp"
                        android:layout_weight="1.3">
                        <TextView
                            android:visibility="gone"
                            android:layout_marginTop="5sp"
                            android:layout_marginLeft="10sp"
                            android:id="@+id/txt_progress"
                            android:text="Loading data..."
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ListView
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:descendantFocusability="afterDescendants"
                            android:id="@+id/channel_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="#00000000"
                            android:dividerHeight="1sp"
                            android:scrollbars="none"/>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/ly_right"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="15dp">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="2.5"/>
                        <LinearLayout
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_marginTop="5sp"
                            android:layout_weight="2.3"
                            android:orientation="vertical"
                            android:padding="10sp">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_weight="1">
                                <TextView
                                    android:focusable="false"
                                    android:clickable="false"
                                    android:focusableInTouchMode="false"
                                    android:id="@+id/txt_firstTime"
                                    android:textColor="@color/yellow"
                                    android:textSize="15sp"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"/>
                                <TextView
                                    android:focusable="false"
                                    android:clickable="false"
                                    android:focusableInTouchMode="false"
                                    android:id="@+id/txt_firstTitle"
                                    android:textColor="@color/yellow"
                                    android:textSize="15sp"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_weight="1">
                                <TextView
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:focusable="false"
                                    android:clickable="false"
                                    android:focusableInTouchMode="false"
                                    android:id="@+id/secondTime"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"/>
                                <TextView
                                    android:textSize="15sp"
                                    android:textColor="@color/white"
                                    android:clickable="false"
                                    android:focusableInTouchMode="false"
                                    android:focusable="false"
                                    android:id="@+id/secondTitle"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_weight="1">
                                <TextView
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:focusable="false"
                                    android:clickable="false"
                                    android:focusableInTouchMode="false"
                                    android:id="@+id/thirdTime"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"/>
                                <TextView
                                    android:textSize="15sp"
                                    android:textColor="@color/white"
                                    android:clickable="false"
                                    android:focusableInTouchMode="false"
                                    android:focusable="false"
                                    android:id="@+id/thirdTitle"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_weight="1">
                                <TextView
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:id="@+id/fourthTime"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"/>
                                <TextView
                                    android:textSize="15sp"
                                    android:textColor="@color/white"
                                    android:focusableInTouchMode="false"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:id="@+id/fourthTitle"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:id="@+id/ly_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_view"
                        android:layout_width="0sp"
                        android:layout_height="23dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_marginLeft="3sp"
                            android:visibility="visible"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5sp"
                            android:text="VIEW"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="5sp"
                        android:id="@+id/ly_sort"
                        android:layout_width="0sp"
                        android:layout_height="23sp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_marginLeft="3sp"
                            android:visibility="visible"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5sp"
                            android:text="SORT"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="5sp"
                        android:id="@+id/ly_fav"
                        android:layout_width="0sp"
                        android:layout_height="23sp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_marginLeft="3sp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/yellow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5sp"
                            android:text="FAVORITE"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="5sp"
                        android:id="@+id/ly_move"
                        android:layout_width="0sp"
                        android:layout_height="23sp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_marginLeft="3sp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5sp"
                            android:text="MOVE"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_guide"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="vertical"
                android:paddingLeft="13sp"
                android:paddingRight="17dp">

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/btn_guide"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:background="@color/trans_parent"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingBottom="50sp"
                    android:paddingTop="70sp"
                    android:scaleType="fitXY"
                    android:src="@drawable/tvguidebg" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_margin="40sp"
            android:layout_alignParentRight="true"
            android:id="@+id/ly_surface"
            android:layout_width="200sp"
            android:layout_height="130sp"
            android:focusable="false"
            android:background="@color/black"
            android:focusableInTouchMode="false"
            android:layout_alignParentEnd="true">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.kds.gold.acebird.ijkplayer.widget.media.IjkVideoView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                </com.kds.gold.acebird.ijkplayer.widget.media.IjkVideoView>

                <TextView
                    android:id="@+id/toast_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:background="@color/ijk_transparent_dark"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:visibility="gone" />
                <TableLayout
                    android:visibility="gone"
                    android:id="@+id/hud_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:background="@color/ijk_transparent_dark"
                    android:padding="8dp" />
            </FrameLayout>
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />
            <LinearLayout
                android:id="@+id/def_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/def_image"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sorry, but there is a problem with the broadcast source"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:id="@+id/ly_bottom"
            android:padding="5sp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="@drawable/round_blue"
            android:layout_height="150sp">
            <LinearLayout
                android:padding="5sp"
                android:orientation="horizontal"
                android:id="@+id/ly_info"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txt_title"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txt_dec"
                        android:textSize="15sp"
                        android:text=""
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:padding="5sp"
                    android:layout_marginRight="10sp"
                    android:layout_width="70sp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/channel_logo"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:background="@drawable/title_bg"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0sp">
                    <TextView
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:id="@+id/txt_channel"
                        android:layout_alignParentLeft="true"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text=""
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/txt_date"
                        android:text=""
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="0sp">
                    <LinearLayout
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="15sp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:id="@+id/txt_time_passed"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <SeekBar
                            android:id="@+id/seekbar"
                            android:layout_marginLeft="5sp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="200sp"
                            android:layout_height="5sp"
                            android:progressDrawable="@drawable/seekbar_draw"
                            android:thumb="@android:color/transparent"
                            android:focusable="false"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text=""
                            android:layout_marginLeft="5sp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/txt_remain_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_marginLeft="10sp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/txt_last_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/image_clock"
                            android:layout_marginLeft="15sp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:src="@drawable/clock"/>
                        <ImageView
                            android:id="@+id/image_star"
                            android:layout_marginLeft="5sp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:src="@drawable/star_white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="5sp"
                        android:paddingRight="5sp"
                        android:paddingLeft="5sp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:paddingLeft="10sp"
                            android:background="@drawable/yellow_bg"
                            android:layout_width="0sp"
                            android:layout_weight="0.5"
                            android:layout_height="match_parent">
                            <TextView
                                android:textSize="15sp"
                                android:textColor="@color/epg_event_layout_background_selected"
                                android:text=""
                                android:id="@+id/txt_current_dec"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingLeft="5sp"
                            android:layout_marginLeft="5sp"
                            android:background="@drawable/title_bg"
                            android:layout_width="0sp"
                            android:layout_weight="0.4"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/txt_next_dec"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="0sp"
                            android:layout_weight="0.3"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ly_resolution"
                                android:layout_alignParentRight="true"
                                android:layout_width="36sp"
                                android:layout_height="36sp"
                                android:layout_gravity="center">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_switch" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ly_audio"
                                android:layout_toLeftOf="@+id/ly_resolution"
                                android:layout_width="36sp"
                                android:layout_height="36sp"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_subtitle" />
                            </LinearLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ly_subtitle"
                                android:layout_toLeftOf="@+id/ly_audio"
                                android:layout_width="36sp"
                                android:layout_height="36sp"
                                android:layout_gravity="center">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_subtitle" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/txt_num"
            android:textColor="@color/yellow"
            android:textSize="35sp"
            android:textStyle="bold"
            android:text="50"
            android:layout_margin="40sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ly_color"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ly_viewdlg"
                android:layout_gravity="bottom"
                android:visibility="invisible"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:orientation="vertical"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:background="@drawable/dlg_bg"
                android:layout_width="0sp"
                android:layout_height="80dp"
                android:layout_weight="1">
                <requestFocus />
                <Button
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/btn_list_info"
                    android:layout_marginBottom="3sp"
                    android:background="@drawable/listinfo"
                    android:layout_width="match_parent"
                    android:layout_height="20sp" />
                <Button
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/btn_list"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/list"
                    android:layout_width="match_parent"
                    android:layout_height="20sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_sortdlg"
                android:layout_gravity="bottom"
                android:visibility="invisible"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:orientation="vertical"
                android:layout_marginStart="10sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/dlg_bg"
                android:layout_width="0sp"
                android:layout_height="120sp"
                android:layout_weight="1">
                <requestFocus />
                <Button
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/btn_num"
                    android:layout_marginBottom="3sp"
                    android:background="@drawable/bynum"
                    android:layout_width="match_parent"
                    android:layout_height="20sp" />
                <Button
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/btn_title"
                    android:layout_marginBottom="3sp"
                    android:background="@drawable/bytitle"
                    android:layout_width="match_parent"
                    android:layout_height="20sp" />
                <Button
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/btn_fav"
                    android:layout_marginBottom="3sp"
                    android:background="@drawable/byfav"
                    android:layout_width="match_parent"
                    android:layout_height="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout android:id="@+id/right_drawer"
        android:visibility="visible"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/ijk_transparent_dark" />
</android.support.v4.widget.DrawerLayout>